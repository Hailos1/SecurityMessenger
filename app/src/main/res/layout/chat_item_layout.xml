<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_background"
    android:layout_marginTop="0.5dp"
    android:theme="@style/Theme.Material3.Light">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_chat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_profile"
        android:theme="@style/Theme.Material3.Light"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_name_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chatname"
        android:layout_toEndOf="@id/profile_image_chat"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_vertical"
        android:theme="@style/Theme.Material3.Light"/>

    <TextView
        android:id="@+id/chat_id"
        android:visibility="gone"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:text=""/>
</com.google.android.material.circularreveal.CircularRevealLinearLayout>